<resources xmlns:ns1="http://schemas.android.com/tools" xmlns:tools="urn:oasis:names:tc:xliff:document:1.2">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="MaterialDrawerTheme.TranslucentStatus">
        <item name="windowActionModeOverlay">true</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="AppTheme" >
        <item name="android:minHeight">?actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="AppTheme.AppBarOverlay">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="StandartView.TextView_Tweet"></style>

    <style name="StandartView.TextView_RealName">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:focusable">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StandartView.TextView_UserName">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="StandartView.TextView_Time">
        <item name="android:textColor">@color/silver</item>
    </style>

    <style name="StandartView.ImageView_Profile_Pic">
        <item name="android:layout_width">@dimen/profile_height</item>
        <item name="android:layout_height">@dimen/profile_height</item>
    </style>

    <style name="StandartView">
        <item name="android:layout_marginLeft">@dimen/h_margin_half</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="StandartView.TextView_Interraction_Count">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/composer_char_count_height</item>
        <item name="android:layout_marginRight">@dimen/composer_spacing_medium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/md_grey_500</item>
        <item name="android:textSize">@dimen/composer_font_size_small</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginLeft">0dp</item>
    </style>

    <style name="StandartView.TextView_FontIcon">
        <item name="textType">font_icon</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:elevation">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">4dp</item>
    </style>


    <!--extended twiter styles-->

    <style name="MediaTheme_" parent="@android:style/Theme" tools:override="true">
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <style name="tw__AttributionText_">
