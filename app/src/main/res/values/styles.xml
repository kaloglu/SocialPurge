<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="StandartView.TextView_Tweet"></style>

    <style name="StandartView.TextView_RealName"></style>

    <style name="StandartView.TextView_UserName"></style>

    <style name="StandartView.TextView_Time">
    </style>

    <style name="StandartView.ImageView_Profile_Pic"></style>

    <style name="StandartView">
        <item name="android:layout_marginLeft">@dimen/h_margin_half</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="StandartView.TextView_Interraction_Count">
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="StandartView.TextView_FontIcon">
        <item name="textType">font_icon</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
