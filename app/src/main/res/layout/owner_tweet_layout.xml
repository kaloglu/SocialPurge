<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/profile_pic"
        style="@style/StandartView.ImageView_Profile_Pic"
        tools:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <com.zsk.androtweet2.components.CustomTextView
            android:id="@+id/real_name"
            style="@style/StandartView.TextView_RealName"
            tools:text="RealName RealSurname" />

        <com.zsk.androtweet2.components.CustomTextView
            android:id="@+id/user_name"
            style="@style/StandartView.TextView_UserName"
            android:textStyle="normal"
            tools:text="UserName" />
    </LinearLayout>
</LinearLayout>
