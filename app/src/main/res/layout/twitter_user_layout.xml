<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="8dp"
    android:background="@color/md_white_1000"
    android:elevation="5dp">

    <com.zsk.androtweet2.components.CustomTextView
        android:id="@+id/delete_account"
        style="@style/StandartView.TextView_FontIcon"
        android:layout_marginRight="@dimen/tw__composer_spacing_medium"
        android:background="@color/t_blue_grey_400"
        android:elevation="20dp"
        android:text="@string/ic_trash_empty"
        app:layout_goneMarginRight="8dp"
        android:textColor="@color/md_white_1000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/guideline_h"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/md_blue_600"
        android:elevation="5dp"
        android:foregroundTint="@color/md_blue_A700"
        android:foregroundTintMode="screen"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/guideline_h"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.Guideline
        android:id="@+id/guideline_h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.55" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.30" />

    <ImageView
        android:id="@+id/profile_pic"
        style="@style/tw__ComposerAvatar"
        android:layout_width="73dp"
        android:layout_height="73dp"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/guideline_v"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:elevation="6dp"
        android:paddingBottom="@dimen/composer_spacing_medium"
        android:paddingLeft="@dimen/composer_spacing_medium"
        app:layout_constraintBottom_toTopOf="@id/guideline_h"
        app:layout_constraintLeft_toRightOf="@id/profile_pic"
        app:layout_constraintRight_toRightOf="parent">

        <com.zsk.androtweet2.components.CustomTextView
            android:id="@+id/real_name"
            style="@style/StandartView.TextView_RealName"
            tools:text="RealName RealSurname" />


        <com.zsk.androtweet2.components.CustomTextView
            android:id="@+id/user_name"
            style="@style/StandartView.TextView_UserName"
            tools:text="UserName" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/counts"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="@dimen/tw__composer_spacing_large"
        android:paddingTop="@dimen/tw__composer_spacing_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline_h">

        <com.zsk.androtweet2.components.CustomTextView
            android:id="@+id/tweets_count"
            style="@style/StandartView.TextView_Interraction_Count"
            android:text="0"
            android:textColor="@color/md_black_1000"
            android:textStyle="bold" />

        <com.zsk.androtweet2.components.CustomTextView
            android:id="@+id/tweets_count_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tweets" />

        <com.zsk.androtweet2.components.CustomTextView
            android:id="@+id/divider1"
            style="@style/StandartView.TextView_Interraction_Count"
            android:layout_marginLeft="@dimen/composer_spacing_medium"
            android:elevation="3dp"
            android:text="|" />

        <com.zsk.androtweet2.components.CustomTextView
            android:id="@+id/following_count"
            style="@style/StandartView.TextView_Interraction_Count"
            android:text="0"
            android:textColor="@color/md_black_1000"
            android:textStyle="bold" />

        <com.zsk.androtweet2.components.CustomTextView
            android:id="@+id/following_count_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Following" />

        <com.zsk.androtweet2.components.CustomTextView
            android:id="@+id/divider2"
            style="@style/StandartView.TextView_Interraction_Count"
            android:layout_marginLeft="@dimen/composer_spacing_medium"
            android:elevation="3dp"
            android:text="|" />

        <com.zsk.androtweet2.components.CustomTextView
            android:id="@+id/followers_count"
            style="@style/StandartView.TextView_Interraction_Count"
            android:text="0"
            android:textColor="@color/md_black_1000"
            android:textStyle="bold" />

        <com.zsk.androtweet2.components.CustomTextView
            android:id="@+id/followers_count_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Followers" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
