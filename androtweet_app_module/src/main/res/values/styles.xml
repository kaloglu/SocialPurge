<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="AppTheme.AppBarOverlay">
        <item name="android:minHeight">?actionBarSize</item>
        <item name="android:background">?colorPrimary</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:theme">@style/AppTheme.Toolbar</item>
    </style>

    <style name="AppTheme.Toolbar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="StandartView.TextView_Tweet">
    </style>

    <style name="StandartView.TextView_RealName">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:focusable">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StandartView.TextView_UserName">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="StandartView.TextView_Time">
        <item name="android:textColor">@color/silver</item>
    </style>

    <style name="StandartView.ImageView_Profile_Pic">
        <item name="android:layout_width">@dimen/profile_height</item>
        <item name="android:layout_height">@dimen/profile_height</item>
    </style>

    <style name="StandartView">
        <item name="android:layout_marginLeft">@dimen/h_margin_half</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="StandartView.TextView_Interraction_Count">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/composer_char_count_height</item>
        <item name="android:layout_marginRight">@dimen/composer_spacing_medium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/md_grey_500</item>
        <item name="android:textSize">@dimen/composer_font_size_small</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginLeft">0dp</item>
    </style>

    <style name="StandartView.TextView_FontIcon">
        <item name="textType">font_icon</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:elevation">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">4dp</item>
    </style>
</resources>
